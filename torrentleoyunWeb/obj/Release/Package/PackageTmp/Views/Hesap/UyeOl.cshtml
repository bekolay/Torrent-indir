@model torrentloyunVera.Kullanici

@{
    ViewBag.Title = "Uye Ol";
}

<meta name="Description" CONTENT="Torrent oyun dizi film indirmek için en doğru adres. torrenttenidir.com adresine girip istediğinizi indirin.">
<meta name="keywords" content="Torrent oyun indir,filmi indir,program indir,torrent,indir,indirme sitesi,oyunu indir,türkçe dublaj indir,film sitesi,720p indir,1080p filmi indir,oyun indirme sitesi,torrent oyunlar,Dizi Film indir">

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <section id="blog-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="row">
                        <div class="">
                            <div class="login-form mx-auto d-block w-100">
                                <div class="page-header text-center">
                                    <h1>Üye Ol</h1>
                                </div>
                                <div class="form-validate">
                                    <div class="form-group">
                                        <div class="control-label text-center">
                                            <label id="username-lbl" for="username" class="required invalid">Kullanıcı Adı<span class="star"> *</span></label>
                                        </div>
                                        <div class="controls">
                                            @Html.EditorFor(model => model.KullaniciAdi, new { htmlAttributes = new { @class = "form-control", size = "25", @required = "required", autofocus = "", @type = "text" } })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="control-label text-center">
                                            <label id="username-lbl" for="username" class="required invalid">Ad Soyad<span class="star"> *</span></label>
                                        </div>
                                        <div class="controls">
                                            @Html.EditorFor(model => model.KullaniciAdSoyad, new { htmlAttributes = new { @class = "form-control", size = "25", @required = "required", autofocus = "", @type = "text" } })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="control-label text-center">
                                            <label id="username-lbl" for="username" class="required invalid">Doğum Tarihi<span class="star"> *</span></label>
                                        </div>
                                        <div class="controls">
                                            @Html.EditorFor(model => model.KullaniciDogum, new { htmlAttributes = new { @class = "form-control", size = "25", @required = "required", autofocus = "", @type = "text" } })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="control-label text-center">
                                            <label id="username-lbl" for="username" class="required invalid">E-posta<span class="star"> *</span></label>
                                        </div>
                                        <div class="controls">
                                            @Html.EditorFor(model => model.KullaniciEposta, new { htmlAttributes = new { @class = "form-control", size = "25", @required = "required", autofocus = "", @type = "text" } })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="control-label text-center">
                                            <label id="password-lbl" for="password" class="required">Şifre<span class="star"> *</span></label>
                                        </div>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.KullaniciSifre, new { @class = "form-control", @id = "exampleInputpwd_2", @type = "password" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="control-label text-center">
                                            <label id="password-lbl" for="password" class="required">Şifre Tekrar<span class="star"> *</span></label>
                                        </div>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.KullaniciSifreTekrar, new { @class = "form-control", @id = "exampleInputpwd_2", @type = "password" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="control-label text-center">
                                            <label id="password-lbl" for="password" class="required">Güvenlik Şifresi ( 1 kere belirlenir bir daha değiştirilemez )<span class="star"> *</span></label>
                                        </div>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.KullaniciGuvenlik, new { @class = "form-control", @id = "exampleInputpwd_2", @type = "password" })
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <div class="form-group d-flex justify-content-start">
                                            <div class="controls">
                                                <button type="submit" class="btn btn-info btn-rounded">Üye Ol</button>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!--           // RECENT POST===========-->
                <div class="col-lg-4">
                    <div class="widget-sidebar">
                        <div class="widget-sidebar widget-search">
                            <div class="widget-title"><span>Site İçi Arama</span></div>

                            <form action="/Home/Ara" method="get" class="form-search">
                                <input type="text" name="kelime" class="form-control" placeholder="Aranacak kelime" />
                                <button class="btn btn-default btn-sm pull-right baslik2">Ara</button>
                            </form>
                        </div>
                    </div>

                    <div class="widget-sidebar">
                        <h2 class="title-widget-sidebar">En İyiler</h2>
                        <div class="content-widget-sidebar">
                            <ul>
                                @Html.Partial("_Gosterim", torrentleoyunWeb.Models.Data.Gosterim)


                            </ul>
                        </div>
                    </div>

                    <!--=====================
         CATEGORIES
    ======================-->
                    <div class="widget-sidebar">
                        <h2 class="title-widget-sidebar">Kategoriler</h2>
                        @Html.Partial("_KategoriYan", torrentleoyunWeb.Models.Data.Kategoriler)
                    </div>

                    <!--=====================
           NEWSLATTER
    ======================-->


                </div>
            </div>
        </div>

    </section>

}