
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="owner" content="Torrenttenindi" />
    <meta name="copyright" content="(c) 2019" />
    <meta name="author" content="Torrenttenindi" />
    <meta name="robots" content="index, follow">
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/datatable.css" rel="stylesheet" />


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="wrapper">

        <div class="header">
            <div class="container">
                <div class="row">
                    <nav class="navbar">
                        <div class="container-fluid">
                            <!-- Brand and toggle get grouped for better mobile display -->
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                <a class="navbar-brand" href="~/">Torrentten İndir</a>
                            </div>
                            <!-- Collect the nav links, forms, and other content for toggling -->
                            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                                <ul class="nav navbar-nav navbar-right">
                                    <li><a href="~/">Ana Sayfa</a></li>
                                    <li><a href="~/Home/Telif">DMCA</a></li>

                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Kategoriler</a>
                                        <ul class="dropdown-menu redrop drp3x">
                                            <div class="">
                                                
                                                @Html.Partial("_Kategori", torrentleoyunWeb.Models.Data.Kategoriler)

                                            </div>
                                        </ul>
                                    </li>
                                    <li><a href="~/Home/Contact">Hakkımızda</a></li>
                                    <li class="seperator-li"></li>
                                    @if (Request.IsAuthenticated == false)
                                    {
                                        <li><a href="~/Hesap/Index">Giriş</a></li>
                                        <li><a href="~/Hesap/UyeOl">Üye ol</a></li>
                                    }


                                    @if (Request.IsAuthenticated && HttpContext.Current.User.IsInRole
("Admin"))

                                    {
                                        <li>
                                            <a href="" class="account-wind" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><img src="~/Content/147285.png" alt="" class="pimg">Hesabım <span class="caret"></span></a>

                                            <ul class="dropdown-menu redrop drp1x">
                                                <div class="col-md-12">
                                                    <li><a href="~/Hesap/Ayarlar">Profilim</a></li>
                                                    <li><a href="~/Hesap/Cikis">Çıkış Yap</a></li>
                                                </div>
                                            </ul>

                                        </li>
                                    }

                                    @if (Request.IsAuthenticated && HttpContext.Current.User.IsInRole
("Kullanici"))
                                    {
                                        <li>
                                            <a href="" class="account-wind" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><img src="~/Content/147285.png" alt="" class="pimg">Hesabım <span class="caret"></span></a>

                                            <ul class="dropdown-menu redrop drp1x">
                                                <div class="col-md-12">
                                                    <li><a href="~/Hesap/Ayarlar">Profilim</a></li>
                                                    <li><a href="~/Hesap/Cikis">Çıkış Yap</a></li>
                                                </div>
                                            </ul>

                                        </li>
                                    }

                                </ul>
                            </div><!-- /.navbar-collapse -->

                        </div><!-- /.container-fluid -->
                    </nav>
                </div>
            </div>
            @if (Request.IsAuthenticated == true)
            {
                <div class="container">
                    <div class="row">
                        <nav class="navbar">
                            <div class="container-fluid">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2" aria-expanded="false">
                                        <span class="sr-only">Toggle navigation</span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>

                                    @if (Request.IsAuthenticated && HttpContext.Current.User.IsInRole
("Admin"))
                                    {
                                        <a class="navbar-brand" href="~/">Admin Paneli</a>
                                    }
                                </div>
                                <!-- Brand and toggle get grouped for better mobile display -->
                                <!-- Collect the nav links, forms, and other content for toggling -->

                                @if (Request.IsAuthenticated && HttpContext.Current.User.IsInRole
("Kullanici"))
                                {
                                    <a class="navbar-brand" href="~/">Kullanıcı Paneli</a>


                                }

                                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
                                    <ul class="nav navbar-nav navbar-right">
                                        <li><a href="~/Hesap/AnaSayfa">Ana Sayfa</a></li>
                                        @if (Request.IsAuthenticated && HttpContext.Current.User.IsInRole
("Admin"))
                                        {
                                            <li><a href="~/Hesap/Kullanicilar">Kullanıcılar</a></li>
                                            <li class="dropdown">
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Blok</a>
                                                <ul class="dropdown-menu redrop drp3x">
                                                    <div class="col-md-4">
                                                        <li><a href="~/Hesap/Bloglar">Bloklar</a></li>
                                                        <li><a href="~/Hesap/Kategoriler">Kategoriler</a></li>
                                                        <li><a href="~/Hesap/Yorumlar">Yorumlar</a></li>
                                                    </div>
                                                </ul>
                                            </li>
                                        }
                                        @if (Request.IsAuthenticated && HttpContext.Current.User.IsInRole
("Kullanici"))
                                        {
                                            <li><a href="~/Hesap/BloglarKullanici">Bloklar</a></li>
                                        }
                                    </ul>
                                </div><!-- /.navbar-collapse -->

                            </div><!-- /.container-fluid -->
                        </nav>
                    </div>
                </div>
            }
        </div>

    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <div class="navbar navbar-default navbar-fixed-bottom" style="background:#F39C12">
            <div class="container">
                <p class="text-center">&copy; @DateTime.Now.Year - Bütün Haklarımız Saklıdır.</p>
            </div>
        </div>
    </div>

    <script src="~/Content/jquery.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables-data.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
