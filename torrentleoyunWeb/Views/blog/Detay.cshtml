<div class="content" id="blog-section">
    <div class="container">
        <div class="row">
            <div class="">
                <div class="col-lg-8">
                    <div class="row">
                        <div id="icerik post-content">
                            <div class="content">
                                <div id="icerik-yazi" itemscope="" itemtype="http://schema.org/NewsArticle">
                                    <meta itemprop="mainEntityOfPage" content="https://torrenttenidir.com/blog/@Model.BlogUrl">
                                    <meta itemprop="isFamilyFriendly" content="TRUE">
                                    <meta itemprop="publishingPrinciples" content="https://torrenttenidir.com/Home/Telif">
                                    <meta itemprop="dateModified" content="@Model.BlogTarih.ToString("YYYY-MM-DDThh:mm:ssTZD")">
                                    <meta itemprop="dateCreated" content="@Model.BlogTarih.ToString("YYYY-MM-DDThh:mm:ssTZD")">
                                    <meta itemprop="articleSection" content="@Model.BlogKategori.BlogKategoriAdi">
                                    <meta itemprop="inLanguage" content="tr-TR">
                                    <meta itemprop="genre" content="news" name="medium">
                                    <div id="crumbs" itemscope itemtype="http://schema.org/BreadcrumbList">
                                        <strong>Buradasınız:</strong>
                                        <a title="Torrentten İndir" href="https://torrenttenidir.com/ ">Torrentten İndir</a> /
                                        <a title="@Model.BlogKategori.BlogKategoriAdi" href="https://torrenttenidir.com/K/@Model.BlogKategori.BlogKategoriUrl" itemprop="keywords" rel="category tag">
                                            @Model.BlogKategori.BlogKategoriAdi
                                    </a> /
                                    <span class="current" itemprop="itemListElement">
                                        <a itemprop="title" title="@Model.BlogAdi" href="https://torrenttenidir.com/blog/@Model.BlogUrl">@Model.BlogAdi</a>
                                    </span>
                                </div>
                                <div class="icerik-baslik">
                                    <h1 itemprop="headline" class="entry-title"><a href="https://orrenttenidir.comblog/@Model.BlogUrl" title="@Model.BlogAdi">@Model.BlogAdi</a></h1>
                                    <div hidden class="post-author" itemscope itemtype="http://schema.org/Person" itemprop="author">@Html.DisplayFor(model => model.Kullanici.KullaniciAdi)</div>
                                    <div hidden class="post-date" datetime="@Model.BlogTarih.ToString("YYYY-MM-DDThh:mm:ss")" itemprop="dateCreated">@Model.BlogTarih.ToString("dd.MM.yyyy")</div>
                                </div>
                                <div class="icerik-y-uzun">
                                    <p>&nbsp;</p>
                                    <p>&nbsp;</p>
                                    <p>&nbsp;</p>
                                    <a title="@Model.BlogAdi" href="https://torrenttenidir.com/blog/@Model.BlogUrl">
                                        <img alt="@Model.BlogAdi" title="@Model.BlogAdi" itemprop="image" itemscope="" itemtype="https://schema.org/ImageObject" style="width: 700px; height: 400px;" class="img-fluid rounded img-responsive" src="~/Images/@Model.BlogResim" width="929" height="344" srcset="~/Images/@Model.BlogResim" sizes="(max-width: 929px) 100vw, 929px">
                                    </a>
                                    <hr>


                                    <br />
                                    <div itemprop="articleBody">
                                        @Html.Raw(Model.BlogYazi)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
